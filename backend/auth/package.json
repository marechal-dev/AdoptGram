{
  "name": "auth",
  "version": "1.0.0",
  "description": "Auth API for AdoptGram",
  "author": {
    "name": "Pietro Piva Vieira",
    "email": "pietro.developer@gmail.com"
  },
  "main": "dist/server.js",
  "engines": {
    "node": ">=18 <19"
  },
  "scripts": {
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "build": "tsup src --out-dir dist",
    "start:dev": "tsx watch src/server.ts",
    "start:prod": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:c8": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:create-prisma-env": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-env": "npm link vitest-environment-prisma",
    "pretest:e2e": "run-s test:create-prisma-env test:install-prisma-env",
    "test:e2e": "vitest run --dir src/infra/http",
    "test:e2e:watch": "vitest watch --dir src/infra/http"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "8.3.0",
    "@fastify/jwt": "7.0.0",
    "@fastify/swagger": "8.6.0",
    "@prisma/client": "^4.15.0",
    "bcryptjs": "2.4.3",
    "dayjs": "1.11.8",
    "dotenv": "16.3.1",
    "fastify": "^4.18.0",
    "vite-tsconfig-paths": "4.2.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@types/supertest": "2.0.12",
    "@faker-js/faker": "8.0.2",
    "prisma": "4.15.0",
    "@types/node": "^20.3.1",
    "supertest": "6.3.3",
    "npm-run-all": "4.1.5",
    "@types/bcryptjs": "2.4.2",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@vitest/coverage-v8": "0.32.2",
    "@vitest/ui": "0.32.2",
    "eslint": "^8.43.0",
    "tsup": "^7.0.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "vitest": "0.32.2"
  }
}